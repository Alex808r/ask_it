<h1> New question </h1>

<%= form_with model: @question, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Title" %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, required: true, minlength: 2, placeholder: "Body" %>
  </div>

  <div>
    <%=form.submit 'Submit question', class: 'btn btn-primary' %>
  </div>

<% end %>