<% provide(:page_title, "Show question # #{@question.id}") %>
<% currently_at 'Show question' %>

<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<div class="lead my-3">
  <%= sanitize @question.body %>
</div>

<div class="btn-group">
  <%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
  <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
  <%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger',
            data: {method: :delete, confirm: 'Are you sure?'} %>
</div>

<hr class="my-3">

<h2 class="mb-3">Write your answer</h2>

<%= render 'answers/form' %>

<h2 class="mt-5"> Answers </h2>


  <%# @answers.each do |answer| %>
  <%# end %>

<!-- render @answers заменяет нам @answers.each do |answer| end
 обратится к паршелу _answer.html.erb и пройдет по коллекции так же как each
 -->
<%#= render @answers %>

<%== pagy_bootstrap_nav @pagy %>
<%= render partial: 'answers/answer', collection: @answers, as: :answer,
    locals: {question: @question} %>
